{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "es5",
        "noImplicitAny": false,
        "outDir": "dist",
        "baseUrl": ".",
        "watch": true,
        "resolveJsonModule": true,
        "rootDir": "src"
    },
    "include": [
        "src/**/*",
        "!src/view/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}