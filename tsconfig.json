{
    "compilerOptions": {
        "module": "ES2015",
        "esModuleInterop": true,
        "target": "ES6",
        "noImplicitAny": false,
        "outDir": "dist",
        "baseUrl": ".",
        "watch": true,
        "downlevelIteration": true,
        "rootDir": "src",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "!src/view/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}